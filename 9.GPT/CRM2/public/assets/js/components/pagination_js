
import { loadPage } from "../router_js";

export function renderPagination(name,total,page){
  const pages = Math.ceil(total/10);
  let html="";
  for(let i=1;i<=pages;i++){
    html+=`<button class="btn btn-sm ${i===page?'btn-primary':'btn-outline-primary'} me-1"
      onclick="load('${name}',${i})">${i}</button>`;
  }
  document.getElementById("pagination").innerHTML = html;
}
