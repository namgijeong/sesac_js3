
import { loadPage } from "../router_js";

export function renderNavbar(){
  document.getElementById("navbar").innerHTML = `
  <nav class="navbar navbar-dark bg-dark px-3">
    <span class="navbar-brand">MyCRM</span>
    <div>
      <button class="btn btn-sm btn-light me-1" onclick="load('users')">Users</button>
      <button class="btn btn-sm btn-light me-1" onclick="load('stores')">Stores</button>
      <button class="btn btn-sm btn-light me-1" onclick="load('items')">Items</button>
      <button class="btn btn-sm btn-light" onclick="load('orders')">Orders</button>
    </div>
  </nav>`;
  window.load = loadPage;
}
